{
  "type": "line",
  "data": {
    "labels": $[0].content.data[num_blocks=50000].block_size,
    "datasets": $~>$map(function($v, $i, $a) {(
      $hue := $floor(360 * $i / $count($a));
      $color := "hsl(" & $hue & ",50%,60%)";
      {
        "label": $v.name,
        "data": $v.content.data[num_blocks=50000].(bytes / $power(2, 30) / time),
        "backgroundColor": $color,
        "borderColor": $color,
        "fill": false
      }
    )})
  },
  "options": {
    "title": {
      "display": true,
      "text": "Bandwidth Plot"
    },
    "tooltips": {
      "mode": "index",
      "intersect": false
    },
    "scales": {
      "xAxes": [
        {
          "scaleLabel": {
            "display": true,
            "labelString": "Block-Size"
          }
        }
      ],
      "yAxes": [
        {
          "scaleLabel": {
            "display": true,
            "labelString": "Bandwidth [GB/s]"
          },
          "ticks": {
            "min": 0
          }
        }
      ]
    }
  }
}
