(
$data := content[dataset.system="K20Xm"];
{
  "type": "scatter",
  "data": {
    "labels": $data.problem.nonzeros,
    "datasets": [
      {
        "label": "csr",
        "data": $data.{"x": problem.nonzeros, "y": spmv.csr.time},
        "backgroundColor": "hsl(346,84%,61%)",
        "fill": false,
        "showLine": false
      },{
        "label": "coo",
        "data":$data.{"x": problem.nonzeros, "y": spmv.coo.time},
        "backgroundColor": "hsl(42,100%,70%)",
        "fill": false,
        "showLine": false
      },{
        "label": "ell",
        "data": $data.{"x": problem.nonzeros, "y": spmv.ell.time},
        "backgroundColor": "hsl(164,95%,43%)",
        "fill": false,
        "showLine": false
      },{
        "label": "sellp",
        "data": $data.{"x": problem.nonzeros, "y": spmv.sellp.time},
        "backgroundColor": "hsl(195,83%,38%)",
        "fill": false,
        "showLine": false
      },{
        "label": "hybrid",
        "data": $data.{"x": problem.nonzeros, "y": spmv.hybrid.time},
        "backgroundColor": "hsl(195,83%,16%)",
        "fill": false,
        "showLine": false
      }
    ]
  },
  "options": {
    "title": {
      "display": true,
      "text": "GFLOPs comparison plot"
    },
    "tooltips": {
      "mode": "index",
      "intersect": true
    },
    "scales": {
      "xAxes": [
        {
          "type": "logarithmic",
          "scaleLabel": {
            "display": true,
            "labelString": "Number of nonzeros"
          }
        }
      ],
      "yAxes": [
        {
          "scaleLabel": {
            "display": true,
            "labelString": "GFLOPs"
          },
          "ticks": {
            "min": 0
          }
        }
      ]
    }
  }
}
)
